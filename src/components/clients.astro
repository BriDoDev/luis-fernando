---
import { t } from "i18next";

// --- LISTA DINÁMICA DE CLIENTES ---
// Simplemente agrega o quita objetos de este arreglo para actualizar la sección.
// Asegúrate de que las imágenes de los logos existan en la carpeta /public/logos/
const clients = [{ name: "csmx", logo: "images/logos/csmx.png" }];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2
        class="text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl"
      >
        {t("clients.title")}
      </h2>
    </div>

    <div
      class="mx-auto mt-12 flex flex-wrap justify-center items-center gap-x-12 gap-y-10"
    >
      {
        clients.map((client) => (
          // El div individual ya no es necesario, pero se puede dejar
          <img
            class="h-14 w-auto object-contain filter grayscale transition-all duration-300 ease-in-out hover:grayscale-0"
            src={client.logo}
            alt={`Logo de ${client.name}`}
            loading="lazy"
            width="158"
            height="56"
          />
        ))
      }
    </div>
  </div>
</section>
